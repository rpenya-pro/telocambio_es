{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "baseUrl": "./",  // Es necesario para que "paths" funcione
    "paths": {
      "@app-shared/react-shared": ["../app-shared/src/components/"] ,
      "@app-shared/react-hooks": ["../app-shared/src/hooks/*"]
    }
  },
  "files": ["src/app-footer-react-footer.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
